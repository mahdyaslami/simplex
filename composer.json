{
    "name": "mahdyaslami/simplex",
    "description": "Dev environment for my PHP libraries.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Mahdi Aslami Khavari",
            "email": "mahdyaslami@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "nikic/fast-route": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "Simple\\": "Simple/"
        },
        "files": [
            "Simple/helpers.php"
        ]
    },
    "scripts": {
        "test": ".\\vendor\\bin\\phpunit --colors=always",
        "test-fastroute": ".\\vendor\\bin\\phpunit --colors=always --configuration phpunit.xml --testsuite fastroute",
        "test-env": ".\\vendor\\bin\\phpunit --colors=always --configuration phpunit.xml --testsuite env"
    },
    "require-dev": {
        "phpunit/phpunit": "9"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "prefer-stable": true
}
