{
    "name": "mahdyaslami/simplex",
    "description": "Dev environment for my PHP libraries.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Mahdi Aslami Khavari",
            "email": "mahdyaslami@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "nikic/fast-route": "^1.3",
        "psr/http-message": "^1.0",
        "psr/http-server-handler": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Simplex\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit --colors=always",
        "coverage": [
            "@putenv XDEBUG_MODE=coverage",
            "./vendor/bin/phpunit --colors=always --coverage-html ./.phpunit.cache/coverage-report"
        ]
    },
    "require-dev": {
        "mockery/mockery": "^1.4",
        "phpunit/phpunit": "^9.5"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "prefer-stable": true
}